{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "main.c",
                "-Wall",
                "-g",
                "-std=c99",
                "-Ldeps/libs/freeglut",
                "-Ideps/include",
                "-lfreeglut_static",
                "-DFREEGLUT_STATIC",
                "-lwinmm",
                "-lopengl32",
                "-lgdi32",
                "-lglu32",
                "-o",
                "main.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build C code with FreeGLUT"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "main.c",
                "-o",
                "${fileDirname}\\main.exe"
            ],
            "options": {
                "cwd": "C:/msys64/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}